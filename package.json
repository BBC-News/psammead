    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-json": "^2.1.2",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "7.23.2",
    "gh-pages": "^3.1.0",
    "github-api": "^3.3.0",
    "glob-loader": "^0.3.0",
    "husky": "^4.2.5",
    "jest": "^26.5.0",
    "json5": "^2.1.3",
    "lint-staged": "^10.2.13",
    "prettier": "^2.0.5",
    "prop-types": "^15.7.2",
    "ramda": "^0.27.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-test-renderer": ">=16.9.0",
    "request": "^2.88.2",
    "semver": "^7.3.2",
    "shelljs": "^0.8.4",
    "strip-ansi": "^6.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-recommended": "^3.0.0",
    "yargs-parser": "^20.2.1",
    "yeoman-generator": "^4.12.0",
    "yo": "^3.1.1"
  },
  "config": {
    "babel_ignore": "'**/*.test.js,**/*.test.jsx,**/*.stories.js,**/*.stories.jsx'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn packages:check && lint-staged",
      "pre-push": "sh scripts/enforceVersions.sh && yarn test:unit -- --changedSince=latest"
    }
  },
  "spec": {
    "prune": false,
    "requires": [
      "nodejs",
      "cfn-signal",
      "cloud-httpd24-ssl-services-devs-staff"
    ],
    "environment": {
      "NODE_ENV": "production",
      "BABEL_CACHE_PATH": "/tmp/.babel.json"
    },
    "post": [
      "mkdir -p /etc/bake-scripts/PSAMMEAD-COMPONENT-LIBRARY",
      "cp -af /usr/lib/PSAMMEAD-COMPONENT-LIBRARY/bake-scripts/. /etc/bake-scripts/PSAMMEAD-COMPONENT-LIBRARY",
      "chmod +x /etc/bake-scripts/PSAMMEAD-COMPONENT-LIBRARY/*"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,json}": "eslint",
    "packages /**/*.{js,jsx}": "stylelint",
    "scripts /**/*.{js,jsx}": "stylelint"
  }
}
